<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/layout"
    android:layout_gravity="bottom"
    android:padding="10dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
       >

        <EditText
            android:layout_alignParentLeft="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text"
            android:background="@android:color/transparent"
            android:textSize="25sp"
            android:enabled="false"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:layout_toLeftOf="@id/backspace"
            android:textColorHint="@color/colorPrimary"/>
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/backspace"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:tint="@color/colorPrimary"
            android:src="@drawable/ic_outline_backspace"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:minHeight="100dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/key1"
                android:elevation="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_key_round_border"
                android:layout_width="match_parent"
                android:text="1"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp"
                android:layout_height="match_parent"
               />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/key2"
                android:elevation="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_key_round_border"
                android:layout_width="match_parent"
                android:text="2"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp"
                android:layout_height="match_parent"
                />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/key3"
                android:elevation="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_key_round_border"
                android:layout_width="match_parent"
                android:text="3"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp"
                android:layout_height="match_parent"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:minHeight="100dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/key4"
                android:elevation="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_key_round_border"
                android:layout_width="match_parent"
                android:text="4"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp"
                android:layout_height="match_parent"
                />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/key5"
                android:elevation="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_key_round_border"
                android:layout_width="match_parent"
                android:text="5"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp"
                android:layout_height="match_parent"
                />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/key6"
                android:elevation="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_key_round_border"
                android:layout_width="match_parent"
                android:text="6"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp"
                android:layout_height="match_parent"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:minHeight="100dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/key7"
                android:elevation="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_key_round_border"
                android:layout_width="match_parent"
                android:text="7"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp"
                android:layout_height="match_parent"
                />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/key8"
                android:elevation="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_key_round_border"
                android:layout_width="match_parent"
                android:text="8"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp"
                android:layout_height="match_parent"
                />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/key9"
                android:elevation="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_key_round_border"
                android:layout_width="match_parent"
                android:text="9"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp"
                android:layout_height="match_parent"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:minHeight="100dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/keystar"
                android:elevation="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_key_round_border"
                android:layout_width="match_parent"
                android:text="*"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp"
                android:layout_height="match_parent"
                />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/key0"
                android:elevation="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_key_round_border"
                android:layout_width="match_parent"
                android:text="0"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp"
                android:layout_height="match_parent"
                />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/keyhash"
                android:elevation="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_key_round_border"
                android:layout_width="match_parent"
                android:text="#"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp"
                android:layout_height="match_parent"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>